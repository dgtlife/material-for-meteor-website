template(name="md_popup_menu__demo")
  .component-title Popup Menu
  p.docs
    | An MD Popup Menu is a menu that is triggered by a click on an icon and
    | appears to 'popup' out of this trigger icon.
  .demo-box
    .demo-group
      .demo--popup
        .element-title(style="color: #818181;") Top right
        .menu__container
          +md_popup_menu(
            position="top-right"
            opening_animation="popup-top-right--default"
            icon="more-vert"
            menu__id="demo-popup--top-right"
            menu__content="popupTopRightContent"
          )

      .demo--popup
        .element-title(style="color: #818181;") Top left
        .menu__container
          +md_popup_menu(
            position="top-left"
            opening_animation="popup-top-left--default"
            icon="more-vert"
            menu__id="demo-popup--top-left"
            menu__content="popupTopLeftContent"
          )
    .demo-group
      .demo--popup
        .element-title(style="color: #818181;") Bottom right
        .menu__container
          +md_popup_menu(
            position="bottom-right"
            opening_animation="popup-bottom-right--default"
            icon="more-vert"
            menu__id="demo-popup-menu-4"
          )
          div(data-items-for="demo-popup-menu-4")
            +md_item(menu_item="" menu="demo-popup-menu-4" classes="demo-menu-item" text="Directions for walking" icon="directions-walk")
            +md_item(menu_item="" menu="demo-popup-menu-4" classes="demo-menu-item" text="Directions by bus" icon="directions-bus")
            +md_item(menu_item="" menu="demo-popup-menu-4" classes="demo-menu-item" text="Directions by subway" icon="directions-subway")
      .demo--popup
        .element-title(style="color: #818181;") Bottom left
        .menu__container
          +md_popup_menu(
            position="bottom-left"
            opening_animation="popup-bottom-left--default"
            icon="more-vert"
            menu__id="demo-popup-menu-3"
            menu__items=items__popup_menu__with_helper
          )
  p.docs The above menus are generated by the following code.
  +doc_box(
    id="doc-box--md-popup-menu"
    id__tabs="md-popup-menu__tabs"
    tabs=tabs
    name__spacebars="md-popup-menu__spacebars"
    name__jade="md-popup-menu__jade"
    name__js="md-popup-menu__js"
    code__spacebars=code__spacebars
    code__jade=code__jade
    code__js=code__js
    api_screen="MD Popup Menu API"
  )

template(name="popupTopRightContent")
  +md_item(menu_item="" menu="demo-popup--top-right" classes="demo-menu-item" text="MD Menu Item Four")
  +md_item(menu_item="" menu="demo-popup--top-right" classes="demo-menu-item" text="MD Menu Item Five")
  +md_item(menu_item="" menu="demo-popup--top-right" classes="demo-menu-item" text="MD Menu Item Six")

template(name="popupTopLeftContent")
  +md_item(menu_item="" menu="demo-popup--top-left" classes="demo-menu-item" text="MD Menu Item One")
  +md_item(menu_item="" menu="demo-popup--top-left" classes="demo-menu-item" text="MD Menu Item Two")
  +md_item(menu_item="" menu="demo-popup--top-left" classes="demo-menu-item" text="MD Menu Item Three")

